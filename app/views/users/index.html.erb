<% provide(:title , "All Users ") %>
<br>
<h3>Al Users</h3>

<%= will_paginate %>
<ul class = "users">
    <% @users.each do |user|%>
        <li>
            <%= link_to user.name , user %>
        </li>
        <% if current_user.admin? || current_user.eql?(user) %> | <%= link_to "delete" , user ,method: :delete, data: {confirm: "you sure"} %>
        <% end %>

    <% end %>
</ul>
<%= will_paginate %>

